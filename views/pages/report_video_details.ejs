<%- include('../partials/head', {titleName: "Report Details"}) %>
 
    <body data-sidebar="dark" data-layout-mode="dark" data-topbar="light">

    <!-- <body data-layout="horizontal" data-topbar="colored"> -->
        <div class="modal fade" id="deleteUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                </div>
                <div class="modal-body">
                    <div id="alertContainer"></div>
                    Are you sure you want to delete?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="closeModal" data-dismiss="exampleModalLabel">Cancel</button>
                        <button type="button" class="btn btn-danger" id="deleteSticker">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        <!-- Begin page -->
        <div id="layout-wrapper">

            <%- include('../partials/page_top') %>

            <!-- ========== Left Sidebar Start ========== -->
            <%- include('../partials/side_menu', {selected: 5}) %>
            <!-- Left Sidebar End -->

            

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                          <% if (user.power == 0) { %>
                            <div class="col-12">
                              <div class="alert alert-warning" role="alert">
                                This is a demo account. Any changes you make will not be saved.
                              </div>
                            </div>
                          <% } %>
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0">Video Report Details</h4>
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->
                        <div class="row mb-4">
                            <div class="col-xl-4">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="text-muted">
                                            <div class="table-responsive mt-4">                         
                                                <div id="alertContainer3"></div> <div id="alertContainer5"></div>
                                                  <input type="text" id="id" class="form-control" value="<%= reportDetails.id %>" hidden>
                                                  <input type="text" id="videoId" class="form-control" value="<%= reportDetails.video_id %>" hidden>
                                                <div>
                                                    <p class="mb-1">Report by:</p>
                                                    <input type="text" class="form-control" id="message" value="<%= reportDetails.name %>" disabled>
                                                </div>
                                                <% if (reportDetails.videoUrl) { %>
                                                  <div>
                                                    <p class="mt-4">Video Title:</p>
                                                    <input type="text" class="form-control" id="message" value="<%= reportDetails.title %>" disabled>
                                                </div>
                                                <div class="mt-4">
                                                    <p class="mb-1">Video Url:</p>
                                                    <input type="text" class="form-control" id="document" value="<%= reportDetails.videoUrl %>" disabled onclick="showImageInNewTab()">
                                                </div>
                                                <% } %>
                                                  <div>
                                                    <p class="mt-4">Reason:</p>
                                                    <input type="text" class="form-control" id="message" value="<%= reportDetails.ReportReason %>" disabled>
                                                </div>
                                                <% if (reportDetails.videoUrl) { %>
                                                <div class="mt-4">
                                                    <p class="mb-1">Status:</p>
                                                    <select class="form-control form-select" id="statuss">
                                                            <option value="0" <%= reportDetails.status == 0 ? 'selected' : '' %>>Pending</option>
                                                            <option value="1" <%= reportDetails.status == 1 ? 'selected' : '' %>>Closed</option>
                                                    </select>
                                                </div>
                                                <% } else {%>
                                                  <p class="mt-4" style="color: red">Video has been deleted by administrator.</p>
                                                  <% } %>
                                                <div class="d-flex flex-wrap gap-3 mt-3">
                                                  <% if (reportDetails.videoUrl) { %>
                                                    <a type="submit" class="btn btn-primary" id="btnUpdate">Update Status</a>                                                    
                                                    <a href="<%= reportDetails.videoUrl %>" target="_blank" class="btn btn-primary" title="View">
                                                      <i class="fas fa-eye"></i> View Video
                                                    </a>
                                                      <a onclick="deleteUser(this, '<%= reportDetails.video_id %>')" type="button" class="btn btn-danger" title="Delete">
                                                        <i class="fas fa-trash-alt"></i> Delete Video
                                                    </a>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->
                        
                    </div> <!-- container-fluid -->
                </div>
            <!-- end main content-->
            <%- include('../partials/footer') %>
        </div>
        <!-- END layout-wrapper -->

        

        <!-- Right Sidebar -->
        <%- include('../partials/right_sidebar') %>
        <!-- /Right-bar -->

        <!-- Right bar overlay-->
        <div class="rightbar-overlay"></div>

