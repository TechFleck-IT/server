        <script>
                    $('#closeModal').click(function () {
            $('#deleteUser').modal('hide');
        });
$(document).ready(function() {  
  $('#alertContainer3').empty();
  $("#btnUpdate").click(function(){
    var id = $("#id").val();
    var status = $("#statuss").val();
    updateData(id, status);
  });
});

async function updateData(id, status) {

  $('#alertContainer3').empty();

  $('#btnUpdate').addClass("disabled");
  $('#btnUpdate').html('Updating..');

  $.ajax({
    type: "POST",
    url: "updateReportRequest",
    data:  {
      id: id,
      status: status
    },
    success: function (res) {
      if (res.status === 'success') {
        console.log(res.status);
        $('#btnUpdate').removeClass("disabled");
        $('#btnUpdate').html('Update Status');
        $('#alertContainer3').html(`
          <div class="alert alert-success" role="alert">
            ${res.message}
          </div>
        `);
        setTimeout(function () {
          $('#alertContainer3 .alert').hide();
        }, 1000); 
      } else {
        $('#alertContainer3').html(`
          <div class="alert alert-danger" role="alert">
            ${res.message}
          </div>
        `);
      }
    },
    dataType: 'json',
  });
}

function deleteUser(element, reportId) {
    $('#alertContainer5').empty();
        $('#deleteUser').modal('show');
        var id = reportId;
        let btn = element;
        console.log(btn);
        $('#deleteSticker').click(function () {
            $.ajax({
                url: 'deleteReportVideo',
                type: 'POST',
                data: {
                    id : id
                },
                success: function (res) {
                    if (res.status === 'success') {
                        $('#deleteUser').modal('hide');
                        $('#alertContainer5').html(`
                        <div class="alert alert-success" role="alert">
                            ${res.message}
                        </div>
                    `);
                setTimeout(function () {
                    $('#alertContainer5 .alert').hide();
                }, 2000);
            }
                },
                dataType: "json",
            });
        });
        }

function showImageInNewTab() {
