            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <% if (user.power == 0) { %>
                                <div class="col-12">
                                  <div class="alert alert-warning" role="alert">
                                    This is a demo account. Any changes you make will not be saved.
                                  </div>
                                </div>
                              <% } %>
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0">Notifications</h4>
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->
                        <div class="row mb-4">
                            <div class="col-xl-6">
                                <div class="card h-100">
                                    <div class="card-body">
                                        <div class="text-muted">
                                            <h5 class="font-size-16">Notification</h5>
                                            <div id="alertContainer"></div>
                                            <div class="table-responsive mt-4">
                                                <div class="needs-validation" novalidate>
                                                <div>
                                                    <p class="mb-1">Notification Audience :</p>
                                                    <select class="form-control form-select" id="audience" required>
                                                        <option>Select one</option>
                                                        <option value="android">Android Users</option>
                                                        <option value="ios">iOS Users</option>
                                                        <option value="others">Everyone</option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Select Title
                                                    </div>
                                                </div>
                                                <div class="mt-4">
                                                    <p class="mb-1">Notification Title :</p>
                                                    <input type="text" class="form-control" id="title" placeholder="Enter Title" required>
                                                    <div class="invalid-feedback">
                                                        Enter Title
                                                    </div>
                                                </div>
                                                <div class="mt-4">
                                                    <p class="mb-1">Notification Description :</p>
                                                    <textarea class="form-control" id="description" placeholder="Enter Description" required></textarea>
                                                    <div class="invalid-feedback">
                                                        Enter Description
                                                    </div>
                                                </div>
                                                <div class="d-flex flex-wrap gap-3 mt-3">
                                                    <a type="submit" id="btnSave" class="btn btn-success waves-effect waves-light w-md">Send</a>
                                                </div>
                                            </div>   
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card" style="margin-bottom: 0px;">
                                    <div class="card-body">
                                        <h4 class="card-title mb-2">Recent Notifications</h4>
                                        <ol class="activity-feed mb-0 ps-2 pt-1" data-simplebar style="max-height: 360px;" id="notificationCard">
                                            <% for(let i=0; i<notifications.length; i++) {%>
                                                <% const element = notifications[i]; %>
                                            <li class="feed-item">
                                                <div class="feed-item-list">
                                                    <p class="text-muted mb-1 font-size-13"><%= element.audience %></small></p>
                                                    <p class="mb-0"><b><%= element.title %></b></p>
                                                    <p class="mb-0"><%= element.description %></p>
                                                </div>
                                            </li>
                                            <% }%>
                                        </ol>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->
                        
                    </div> <!-- container-fluid -->
                </div>
            <!-- end main content-->
            <%- include('../partials/footer') %>
        </div>
