        <!-- Chart JS -->
        <script src="assets/libs/chart.js/Chart.bundle.min.js"></script>
        <!-- <script src="assets/js/pages/chartjs.init.js"></script>  -->
        <script>

            var ctx = document.getElementById("doughnut");
            var myChart = new Chart(ctx, {
            type: 'doughnut',
            data: {labels: ["Android", "iOS", "Others"],
                datasets: [{
                label: '# of Tomatoes',
                data: [<%= deviceCount.android %>, <%= deviceCount.apple %>, <%= deviceCount.others %>],
                backgroundColor: [
                '#5b73e8',
                '#e3e4e8',
                '#F3F1F1'
              ],
                }]
            },
            options: {
                //cutoutPercentage: 40,
                responsive: false,
        
            }
            });
            var options, chart, LinechartsalesColors = getChartColorsArray("sales-analytics-chart");
            const currentDate = new Date();
            const currentYear = currentDate.getFullYear();
            const labels = Array.from({ length: 12 }, (_, i) => {
            const month = i + 1;
            return `${month.toString().padStart(2, '0')}/01/${currentYear}`;
            });
            LinechartsalesColors && (options = {
            chart: {
                height: 343,
                type: "line",
                stacked: !1,
                toolbar: {
                    show: !1
                }
            },
            stroke: {
                width: [2, 4],
                curve: "smooth"
            },
            plotOptions: {
                bar: {
                    columnWidth: "30%"
                }
            },
            colors: LinechartsalesColors,
            series: [
                {
                    name: "Monthly Sales",
                    type: "column",
                    data: [<%= coinsByMonth.January %>, <%= coinsByMonth.February %>, <%= coinsByMonth.March %>, <%= coinsByMonth.April %>, <%= coinsByMonth.May %>, <%= coinsByMonth.June %>, <%= coinsByMonth.July %>, <%= coinsByMonth.August %>, <%= coinsByMonth.September %>,<%=  coinsByMonth.October %>, <%= coinsByMonth.November %>,<%=  coinsByMonth.December %>]
                },
                {
                    name: "Income",
                    type: "line",
                    data: [<%= salesMonth.January %>, <%= salesMonth.February %>, <%= salesMonth.March %>, <%= salesMonth.April %>, <%= salesMonth.May %>, <%= salesMonth.June %>, <%= salesMonth.July %>, <%= salesMonth.August %>, <%= salesMonth.September %>,<%=  salesMonth.October %>, <%= salesMonth.November %>,<%=  salesMonth.December %>]
                },
            ],
            fill: {
                opacity: [.85, .25, 1],
                gradient: {
                    inverseColors: !1,
                    shade: "light",
                    type: "vertical",
                    opacityFrom: .85,
                    opacityTo: .55,
                    stops: [0, 100, 100, 100]
                }
            },
            labels: labels,
            markers: {
                size: 0
            },
            xaxis: {
                type: labels
            },
            yaxis: {
                title: {
                    text: "Sales",
                
                }
            },
            tooltip: {
                shared: !0,
                intersect: !1,
                y: {
                    formatter: function(r) {
                    return void 0 !== r ? r.toFixed(0) : r
                    }
                },
                x: {
                    show: false
                }
            },
            grid: {
                borderColor: "#f1f1f1"
            }
            }, (chart = new ApexCharts(document.querySelector("#sales-analytics-chart"), options)).render());
        
            $('#closeModal').click(function () {
                $('#deleteUser').modal('hide');
            });
            function deleteUser(element, reportId) {
                $('#deleteUser').modal('show');
                var id = reportId;
                let btn = element;
                console.log(btn);
                $('#deleteSticker').click(function () {
                    $.ajax({
                        url: 'deleteUser',
                        type: 'POST',
                        data: {
                            id: id
                        },
                        success: function (res) {
                            if (res.status === 'success') {
                                $('#deleteUser').modal('hide');
                                btn.parentNode.parentNode.remove();
                                $('#alertContainer').html(`
                                <div class="alert alert-success" role="alert">
                                  ${res.message}
                                </div>
                            `);
                       setTimeout(function () {
                            $('#alertContainer .alert').hide();
                        }, 2000);
                    }
                        },
                        dataType: "json",
                    });
                });
            }
                </script>

    </body>

</html>