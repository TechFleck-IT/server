                        <div class="row">
                            <div class="col-xl-8">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Revenue Analytics</h4>

                                        <div class="mt-1">
                                            <ul class="list-inline main-chart mb-0">
                                                <li class="list-inline-item chart-border-left me-0 border-0">
                                                    <h3 class="text-primary">$<span data-plugin="counterup"><%= totalSale %></span><span class="text-muted d-inline-block font-size-15 ms-3">Income</span></h3>
                                                </li>
                                                <li class="list-inline-item chart-border-left me-0">
                                                    <h3><span data-plugin="counterup"><%= totalIncome %></span><span class="text-muted d-inline-block font-size-15 ms-3">Coins</span>
                                                    </h3>
                                                </li>
                                                <li class="list-inline-item chart-border-left me-0">
                                                    <h3><span data-plugin="counterup"><%= comparePercentage %></span>%<span class="text-muted d-inline-block font-size-15 ms-3">Comparison by last month</span></h3>
                                                </li>
                                            </ul>
                                        </div>

                                        <div class="mt-3">
                                            <div id="sales-analytics-chart" data-colors='["--bs-primary", "--bs-warning"]' class="apex-charts" dir="ltr"></div>
                                        </div>
                                    </div> <!-- end card-body-->
                                </div> <!-- end card-->
                            </div> <!-- end col-->

                            <div class="col-xl-4">
                                <div class="card">
                                    <div class="card-body">
        
                                        <h4 class="card-title mb-4">Total Devices Chart</h4>
        
                                        <canvas id="doughnut" data-colors='["--bs-primary", "#ebeff2"]' height="400" style="margin-left: 80px;"></canvas>
        
                                    </div>
                                </div>
                            </div> 
                            <!-- end Col -->
                        </div> <!-- end row-->
                        <div class="row">
                            <div class="col-xl-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Top Users</h4>
                                        <div data-simplebar style="max-height: 339px;">
                                            <div class="table-responsive">
                                                <table class="table table-borderless table-centered table-nowrap">
                                                    <tbody>
                                                        <% for(let i=0; i<users.length; i++) {%>
                                                            <% const element = users[i]; %>
                                                        <tr>
                                                            <td style="width: 20px;"><img src="<%= element.profilePicture ? element.profilePicture : 'https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png' %>" class="avatar-xs rounded-circle " alt="..."></td>
                                                            <td>
                                                                <h6 class="font-size-15 mb-1 fw-normal"><%= element.name %></h6>
                                                                <p class="text-muted font-size-13 mb-0"></i>Followers: <%= element.totalFollowers %></p>
                                                            </td>
                                                            <td>
                                                                <span class="badge <%= element.isVerified == 0 ? "bg-soft-warning " : "bg-soft-success" %> font-size-12">
                                                                  <%= element.isVerified == 0 ? "Not verified" : "Verified" %>
                                                                </span>
                                                              </td>
                                                            <td class="text-muted fw-semibold text-end"><i class="icon-xs icon me-2 text-success" data-feather="trending-up"></i>
                                                                <a href="/admin/edit_users?id=<%= element.id %>" class="btn btn-sm edit" title="Edit">
                                                                    <i class="uil uil-eye"></i>
                                                                </a>
                                                            </td>
                                                        </tr>
                                                        <% }%>
                                                    </tbody>
                                                </table>
                                            </div> <!-- enbd table-responsive-->
                                        </div> <!-- data-sidebar-->
                                    </div><!-- end card-body-->
                                </div> <!-- end card-->
                            </div><!-- end col -->
                            <div class="col-xl-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Recent Activity</h4>
                                        <ol class="activity-feed mb-0 ps-2" data-simplebar style="max-height: 339px;">
                                            <% for(let i=0; i<notifications.length; i++) {%>
                                                <% const element = notifications[i]; %>
                                            <li class="feed-item">
                                                <div class="feed-item-list">
                                                    <p class="text-muted mb-1 font-size-13"><%= element.notificationTime %></small></p>
                                                    <p class="mb-0"><%= element.notificationMessage.type %></p>
                                                </div>
                                            </li>
                                            <% }%>
                                        </ol>

                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Top Live Streams</h4>
                                        <div data-simplebar style="max-height: 339px;">
                                            <div class="table-responsive">
                                                <table class="table table-borderless table-centered table-nowrap">
                                                    <tbody>
                                                        <% for(let i=0; i<liveStreams.length; i++) {%>
                                                            <% const element = liveStreams[i]; %>
                                                        <tr>
                                                            <td style="width: 20px;"><img src="<%= element.profilePicture ? element.profilePicture : 'https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png' %>" class="avatar-xs rounded-circle " alt=""></td>
                                                            <td>
                                                                <h6 class="font-size-15 mb-1 fw-normal"><%= element.name %></h6>
                                                                <p class="text-muted font-size-13 mb-0"></i><%= element.title %></p>
                                                            </td>
                                                            <td><%= element.started %></td>
                                                            <td><%= element.ended %></td>
                                                        </tr>
                                                        <% }%>
                                                    </tbody>
                                                </table>
                                            </div> <!-- enbd table-responsive-->
                                        </div> <!-- data-sidebar-->
                                    </div><!-- end card-body-->
                                </div> <!-- end card-->
                            </div
                        </div>
                        <!-- end row -->

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Latest Gift Exchanges</h4>
                                        <div class="table-responsive">
                                            <table class="table table-centered table-nowrap mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Gifted by</th>
                                                        <th>Gifted to</th>
                                                        <th>Total Gems</th>
                                                        <th>Time</th>
                                                        <th>View Details</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for(let i=0; i<giftExchanges.length; i++) {%>
                                                        <% const element = giftExchanges[i]; %>
                                                    <tr>
                                                        <td><%= i +1 %></td>
                                                        <td><%= element.sender_name %></td>
                                                        <td><%= element.receiver_name %></td>
                                                        <td><%= element.gift_gems %></td>
                                                        <td><%= element.sentTime %></td> </td>
                                                        <td>
                                                            <a type="button" class="btn btn-primary btn-sm btn-rounded waves-effect waves-light">
                                                                View Details
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    <% }%>
                                                </tbody>
                                            </table>
                                        </div>
                                        <!-- end table-responsive -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->


                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->


                <%- include('../partials/footer') %>
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->

